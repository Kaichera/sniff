# Sniff Environment Variables
# Copy this file to .env and fill in your credentials

# Linear credentials
# Get your access token from: https://linear.app/settings/api
LINEAR_ACCESS_TOKEN=lin_api_xxx

# Linear webhook secret (optional, for webhook verification)
# Generated when you create a webhook in Linear
LINEAR_WEBHOOK_SECRET=

# Anthropic API key
# Get your API key from: https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-xxx

# Server port (optional, defaults to 3000)
SNIFF_PORT=3000
